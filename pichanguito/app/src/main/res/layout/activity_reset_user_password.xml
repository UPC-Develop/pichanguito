<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetUserPasswordActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetPasswordTextView"
        android:text="Restablecer contraseña"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="50dp"
        android:gravity="center"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/useremailEditText"
        android:layout_below="@id/resetPasswordTextView"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:hint="Correo electrónico"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"></EditText>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetPasswordButton"
        android:layout_below="@id/useremailEditText"
        android:text="Restablecer"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnSignInTextView"
        android:text="Atras"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:layout_below="@id/resetPasswordButton"
        android:gravity="center"></TextView>

</RelativeLayout>